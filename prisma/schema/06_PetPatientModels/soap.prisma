// ---------------------- SOAP ------------------------
model SOAP { // Subjective, Objective, Assessment, Plan
  id                        String            @id @default(auto()) @map("_id") @db.ObjectId
  createdByDoctor           DoctorProfile  @relation(name: "DoctorSOAPsAdministered", fields: [createdByDoctorId, createdByDoctorFirstName, createdByDoctorLastName, createdByDoctorEmail], references: [doctorId, doctorFirstName, doctorLastName, doctorEmail], onDelete: Cascade, onUpdate: Cascade)
  createdByDoctorId         String      @db.ObjectId
  createdByDoctorFirstName  String
  createdByDoctorLastName   String
  createdByDoctorEmail      String

  pet               Pet               @relation(name: "PetSOAP", fields: [petId, petName], references: [petId, petName], onDelete: Cascade, onUpdate: Cascade)
  petId             Int               @unique
  petName           String

  subjective        String
  objective         String
  assessment       String
  plan             String

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}