model Pet {
  id                      String                  @id @default(auto()) @map("_id") @db.ObjectId
  petOwner                PetOwnerProfile         @relation(name: "PetOwnerPets", fields: [petOwnerId, petOwnerFirstName, petOwnerLastName, petOwnerEmail], references: [petOwnerId, petOwnerFirstName, petOwnerLastName, petOwnerEmail], onDelete: Cascade, onUpdate: Cascade)
  petOwnerId              String                  @db.ObjectId
  petOwnerFirstName       String
  petOwnerLastName        String
  petOwnerEmail           String


  petId                   Int                     @unique
  petName                 String
  petSex                  String
  petSpecies              String                  // Added: Type of pet (e.g., Dog, Cat)
  petBreed                String
  petBirthdate            DateTime               // Added: Pet's birth date
  petAge                  String
  petWeight               PetWeight[]              @relation("PetWeight")
  petReproductiveStatus   String?                 // neutered, not neutered, unknown
  petAllergies            String?                 // Added: Pet's allergies
  petColorAndMarkings     String?               // Added: Pet's color
  petAvatar               String?                // Added: Pet's avatar

// Vaccination Booking Model
  vaccinationBookingsForDoctor     VaccinationBookingForDoctor[]     @relation("PetVaccinations")
  vaccinationBookingsHistoriesForDoctor VaccinationBookingHistoryForDoctor[] @relation("PetsVaccinationBookingHistories")
  
  vaccinationBookingsForNurse     VaccinationBookingForNurse[]     @relation("PetVaccinations")
  vaccinationBookingsHistoriesForNurse VaccinationBookingHistoryForNurse[] @relation("PetsVaccinationBookingHistories")

  // Clinic Visits Model
  clinicVisitBookings     ClinicVisitBooking[]         @relation("PetsClinicVisits")  
  clinicVisitBookingsHistories ClinicVisitBookingHistory[] @relation("PetsClinicVisitHistories")

  onlineConsultations     OnlineConsultationBooking[]     @relation("PetOnlineConsultations")   
  onlineConsultationsHistories OnlineConsultationBookingHistory[] @relation("PetsOnlineConsultationBookingHistories")

  
  // SOAP
  soaps                   SOAP[]                @relation("PetSOAP")

  // Medical History
  medicalHistories        MedicalHistory[] @relation("PetMedicalHistory")

  // Medicines
  medicines               Medicine[] @relation("PetMedicine")

  // Antiparasitic Treatments
  antiparasitic         Antiparasitic[] @relation("PetAntiparasitic")

  // Prescriptions
  prescriptions           Prescription[] @relation("PetPrescription")

  // Lab Results
  labResults              LabResult[] @relation("PetLabResult")

  // Vaccinations
  vaccinations            Vaccination[] @relation("PetVaccination")

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  @@unique([petId, petName])
}