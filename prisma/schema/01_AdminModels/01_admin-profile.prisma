// -------------------- ADMIN PROFILE MODELS --------------------
model AdminProfile {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  adminUser       User        @relation( name: "AdminProfile", fields: [adminUserId, adminFirstName, adminLastName, adminEmail], references: [id, firstName, lastName, email], onDelete: Cascade, onUpdate: Cascade)
  adminUserId     String      @db.ObjectId
  adminFirstName  String
  adminLastName   String
  adminEmail      String

  sendEmail       Boolean     @default(false)
  sendSMS         Boolean     @default(false)

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  @@unique([adminUserId, adminFirstName, adminLastName, adminEmail])
}